<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="513.0" prefWidth="561.0" spacing="20" styleClass="login-container" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chatapp.controller.RegisterController">
    <Label styleClass="title" text="Register">
      <font>
         <Font name="Berlin Sans FB Demi Bold" size="21.0" />
      </font></Label>
    <TextField fx:id="usernameField" maxHeight="50.0" maxWidth="300.0" minHeight="50.0" minWidth="300.0" prefColumnCount="0" prefHeight="50.0" prefWidth="300.0" promptText="Username" styleClass="text-field" />
    <PasswordField fx:id="passwordField" maxHeight="50.0" maxWidth="300.0" minHeight="50.0" minWidth="300.0" prefColumnCount="0" prefHeight="50.0" prefWidth="300.0" promptText="Password" styleClass="text-field" />
    <Button fx:id="uploadButton" onAction="#handleUpload" styleClass="button" text="Upload Profile Picture" />
    <Button fx:id="registerButton" onAction="#handleRegister" styleClass="button" text="Register" />
    <Hyperlink fx:id="loginLink" onAction="#handleLoginLink" text="Already have an account? Login" />
    <Label fx:id="errorLabel" styleClass="error-label" />
</VBox>
