<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane styleClass="main-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chatapp.controller.MainController">
    <top>
        <HBox alignment="CENTER" spacing="10" styleClass="header">
            <Label fx:id="usernameLabel" styleClass="username-label"/>
            <ImageView fx:id="profileImage" fitWidth="40" fitHeight="40"/>
            <CheckBox fx:id="themeToggle" text="Dark Mode" onAction="#toggleTheme"/>
            <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" styleClass="button"/>
        </HBox>
    </top>
    <left>
        <VBox spacing="10" styleClass="sidebar">
            <TextField fx:id="searchField" promptText="Search users or groups" onAction="#handleSearch"/>
            <ListView fx:id="chatList" styleClass="chat-list"/>
            <Button fx:id="addContactButton" text="Add Contact" onAction="#handleAddContact" styleClass="button" visible="false"/>
            <Button fx:id="createGroupButton" text="Create Group" onAction="#handleCreateGroup" styleClass="button"/>
        </VBox>
    </left>
    <center>
        <VBox spacing="10" styleClass="chat-area">
            <Label fx:id="chatTitle" styleClass="chat-title"/>
            <ScrollPane fx:id="messageScrollPane" fitToWidth="true">
                <VBox fx:id="messageContainer" styleClass="message-container"/>
            </ScrollPane>
            <HBox spacing="10">
                <TextArea fx:id="messageField" promptText="Type a message..." styleClass="message-field"/>
                <Button fx:id="sendButton" text="Send" onAction="#handleSend" styleClass="button"/>
                <Button fx:id="attachButton" text="Attach" onAction="#handleAttach" styleClass="button"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>